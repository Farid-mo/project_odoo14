<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record model="ir.ui.view" id="enterprise_order_tree_view">
      <field name="name">Card.list.tree</field>
      <field name="model">enterprise.client.card</field>
      <field name="arch" type="xml">
        <tree>
            <field name="l_name"/>
            <field name="number_account"/>
            <field name="expiration_date"/>
            <field name="cvv"/>
            <field name="client_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="enterprise_order_form_view">
      <field name="name">Card.list.form</field>
      <field name="model">enterprise.client.card</field>
      <field name="arch" type="xml">
        <form>
          <group>
             <group>
                <field name="l_name"/>
             </group><br/><br/>
             <group>
                <field name="number_account"/>
                <field name="expiration_date"/>
                <field name="cvv"/>
            </group>
            <group>
              <field name="client_ids"/>
            </group>
          </group>
        </form>
      </field>
    </record>


  </data>
</odoo>
